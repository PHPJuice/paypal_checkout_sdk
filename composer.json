{
    "name": "phpjuice/paypal-checkout-sdk",
    "description": "PayPal's PHP SDK for Checkout REST APIs",
    "keywords": [
        "phpjuice",
        "paypal",
        "checkout"
    ],
    "homepage": "https://phpjuice.gitbook.io/paypal-checkout-sdk",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "PHPJuice",
            "email": "phpjuice@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "guzzlehttp/psr7": "^1.6|^2.0",
        "guzzlehttp/guzzle": "^7.0",
        "brick/money": "^0.5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.4",
        "phpstan/phpstan": "^0.12",
        "pestphp/pest": "^1.18"
    },
    "autoload": {
        "psr-4": {
            "PayPal\\Checkout\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/pest",
        "analyse": "phpstan analyse src tests",
        "php-cs-fixer": [
            "php-cs-fixer fix src --rules=@PSR2",
            "php-cs-fixer fix tests --rules=@PSR2"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
